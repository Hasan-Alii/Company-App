@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br/>
<br/>
<a asp-action="Create" class="btn btn-primary">Create Department</a>
<br />
<br />

@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dept in Model)
            {
                <tr>
                    <td>@dept.Code</td>
                    <td>@dept.Name</td>
                    <td>@dept.DateOfCreation</td>
                    <td><a asp-action="Details" asp-route-Id="@dept.Id" class="btn btn-warning">Details</a></td>
                    <td><a asp-action="Update" asp-route-Id="@dept.Id" class="btn btn-success">Update</a></td>
                    <td><a asp-action="Delete" asp-route-Id="@dept.Id" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="alert alert-danger">
        <h4>There are no departments here</h4>
    </div>
}
