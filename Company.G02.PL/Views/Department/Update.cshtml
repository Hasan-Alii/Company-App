@model Department

@{
    ViewData["Title"] = $"Update {Model.Name} Department";
}

<h1>Update @Model.Name Department</h1>

<br />
<br />

<form asp-action="Update">
    <div class="form-group">
        <label asp-for="Code" class="col-form-label"></label>
        <input asp-for="Code" class="form-control"/>
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfCreation" class="col-form-label"></label>
        <input asp-for="DateOfCreation" class="form-control"/>
    </div>
    <br />
    <input type="submit" value="Update Department" class="btn btn-success"/>
    <a asp-action="Index" class="btn btn-outline-dark">Back To Department List</a>
</form>

